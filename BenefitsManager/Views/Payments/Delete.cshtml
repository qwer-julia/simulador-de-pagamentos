@model BenefitsManager.Models.Payment

@{
    ViewData["Title"] = "Excluir";
}

<section>
    <h1>Excluir</h1>

    <h3>Você tem certeza que deseja excluir esse registro?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.InitialValue)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.InitialValue)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FinalValue)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FinalValue)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Taxpayer)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Taxpayer.Cnpj)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Benefit)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Benefit.Name)
            </dd>
        </dl>
    </div>
</section>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Excluir" class="button-back" />
    <a asp-action="Index" class="button">Voltar</a>
</form>